{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    // Output configuration
    "outDir": "./dist",
    "rootDir": ".",

    // Declaration files
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,

    // Module configuration for building
    "module": "ESNext",
    "target": "ES2022",
    "moduleResolution": "bundler",

    // Remove runtime-only settings
    "noEmit": false,
    "allowImportingTsExtensions": false,

    // Source maps for debugging
    "sourceMap": true,
    "inlineSources": true,

    // Compatibility
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,

    // Type checking
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    // Output quality
    "removeComments": false,
    "preserveConstEnums": true,

    // Composite for project references
    "composite": true,
    "incremental": true,
    "tsBuildInfoFile": "./dist/.tsbuildinfo"
  },
  "include": ["prettier.config.ts"],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.spec.ts",
    "build.ts"
  ]
}
