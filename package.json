{
  "name": "@kjanat/prettier-config",
  "version": "1.0.0",
  "description": "Shareable Prettier config with all plugins included. Supports XML/SVG, Tailwind CSS, package.json, and shell scripts - no additional installation needed!",
  "keywords": [
    "prettier",
    "prettier-config",
    "shareable-config",
    "tailwindcss",
    "xml",
    "svg",
    "packagejson",
    "shell",
    "formatting",
    "zero-config"
  ],
  "homepage": "https://github.com/kjanat/prettier-config#readme",
  "bugs": {
    "url": "https://github.com/kjanat/prettier-config/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kjanat/prettier-config.git"
  },
  "license": "MIT",
  "author": "kjanat",
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/prettier.config.d.ts",
        "default": "./dist/prettier.config.js"
      },
      "require": {
        "types": "./dist/prettier.config.d.cts",
        "default": "./dist/prettier.config.cjs"
      }
    }
  },
  "main": "./dist/prettier.config.cjs",
  "module": "./dist/prettier.config.js",
  "types": "./dist/prettier.config.d.ts",
  "files": [
    "dist",
    "LICENSE"
  ],
  "scripts": {
    "build": "bun build.ts",
    "build:check": "bun run build && publint && attw --pack .",
    "build:node": "tsgo --project tsconfig.build.json && bun run build",
    "clean": "rm -rf dist *.tsbuildinfo",
    "format": "prettier . --write",
    "format:check": "prettier . --check",
    "prepack": "bun clean && bun run build",
    "prepare": "bun run build",
    "prepublishOnly": "bun typecheck && bun format && bun build:check",
    "publish": "bun publish",
    "publish:dry": "bun publish --dry-run",
    "release": "changeset publish",
    "test": "bun test",
    "typecheck": "tsgo --noEmit",
    "version": "changeset version"
  },
  "dependencies": {
    "@prettier/plugin-xml": "^3.4.2",
    "prettier-plugin-packagejson": "^2.5.19",
    "prettier-plugin-sh": "^0.18.0",
    "prettier-plugin-tailwindcss": "^0.7.1"
  },
  "devDependencies": {
    "@arethetypeswrong/cli": "^0.18.2",
    "@changesets/cli": "^2.29.7",
    "@types/bun": "^1.3.1",
    "@typescript/native-preview": "^7.0.0-dev.20251106.1",
    "prettier": "^3.6.2",
    "publint": "^0.3.15",
    "typescript": "^5.9.3"
  },
  "peerDependencies": {
    "prettier": ">=3.6"
  },
  "peerDependenciesMeta": {
    "typescript": {
      "optional": true
    }
  },
  "packageManager": "bun@1.3.0",
  "engines": {
    "bun": ">=1.0.0",
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
